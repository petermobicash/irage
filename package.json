{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "benirage-web-platform",
  "description": "A comprehensive web platform for the Benirage community with chat, content management, and administrative features",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:production": "NODE_ENV=production npx vite build --mode production",
    "build:analyze": "vite build --mode analyze",
    "build:visualize": "vite build --mode analyze && echo 'Bundle analysis complete! Open dist/report.html in your browser.'",
    "preview": "vite preview",
    "preview:production": "npm run build:production && vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:permissions": "node scripts/testing/test-granular-permissions.js",
    "setup:admin": "node scripts/admin/setup-admin-user.js",
    "create:users": "node scripts/users/create-test-users.js",
    "create:users:workaround": "node scripts/users/create-users-workaround.js",
    "test:permissions:full": "npm run setup:admin && npm run create:users && npm run test:permissions",
    "deploy:check": "npm run lint && npm run type-check && npm run build:production",
    "deploy": "npm run deploy:check && echo 'Build successful! Upload dist/ folder to your hosting platform.'",
    "start": "npm run dev",
    "postinstall": "echo 'ðŸš€ BENIRAGE installation complete! Run npm run dev to start development server.'"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@supabase/supabase-js": "^2.58.0",
    "@types/pg": "^8.15.5",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.21",
    "dotenv": "^17.2.3",
    "jspdf": "^3.0.3",
    "lucide-react": "^0.544.0",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-is": "^19.2.0",
    "react-router-dom": "^6.30.1",
    "recharts": "^3.3.0",
    "rollup-plugin-visualizer": "^5.14.0",
    "sequelize": "^6.37.7",
    "tailwindcss": "^3.4.18",
    "vite": "^7.1.12",
    "vite-plugin-pwa": "^1.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jspdf": "^1.3.3",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "gh-pages": "^6.3.0",
    "globals": "^15.9.0",
    "jsdom": "^27.0.0",
    "sequelize-cli": "^6.6.3",
    "supabase": "^2.45.5",
    "terser": "^5.44.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite-bundle-analyzer": "^0.11.0",
    "vitest": "^3.2.4"
  }
}
